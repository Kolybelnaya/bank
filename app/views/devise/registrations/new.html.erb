<div class=container>
  <div class='row'>
    <div class='col-md-3'></div>
    <div class='col-md-6'>
        <h2>Регистрация</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, label:'Адрес электронной почты' %>
            <%= f.input :password, required: true , label:'Пароль'%>
            <%= f.input :password_confirmation, required: true , label:'Подтвердите пароль'%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Зарегистрироваться" %>
          </div>
        <% end %>

    </div>
    <div class='col-md-3'></div>
  </div>
</div>