<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <table class='table'>
        <thead>
        <tr>
          <th>Эл. почта</th>
          <th>Проблема</th>
          <th>Дата и время</th>
          <th>Действия</th>
        </tr>
        </thead>
        <tbody>
          <%- @requests.each do |request|%>
            <tr>
              <td><%=request.email%></td>
              <td><%=request.question%></td>
              <td><%=l(request.date)%><%=l(formatted_time(request.time))%></td>
              <td>
                <%- if request.start %>
                  <span class='label label-info'>прием начат в <%=l(formatted_time(request.start))%></span>
                  <%- if request.finish %>
                    <span class='label label-info'>прием завершен в <%=l(formatted_time(request.finish))%></span>
                  <% else %>
                     <%= link_to "Завершить прием", operator_request_finish_path(request), :method => :put, class: 'btn btn-sm btn-success' %>
                  <% end %>
                <% else %>
                    <%= link_to "Начать прием", operator_request_start_path(request), :method => :put, class: 'btn btn-sm btn-success' %>
                <% end %>
              </td>
            </tr>
          <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>